<div class="text-center">
  <h2>Appointment Details</h2>
  <br />  
  <%= form_tag controller: 'appointments', action: 'create', method: 'post' do %>
    <div class="form-group">
      <%= label_tag :title %>
      <br />
      <%= text_field_tag :summary %>
    </div>
    <div class="form-group">
      <%= label_tag :location %>
      <br />
      <%= text_field_tag :location %>
    </div>
    <div class="form-group">
      <%= label_tag :description %>
      <br />
      <%= text_area_tag :description %>
    </div>
    <div class="form-group">
      <%= label_tag :start %>
      <br />
      <%= date_field_tag :start %>
    </div>
    <div class="form-group">
      <%= label_tag :end %>
      <br />
      <%= date_field_tag :end %>
    </div>
    <%= submit_tag 'Create Appointment', class: "btn btn-success" %>
  <% end %>
</div>